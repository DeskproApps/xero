{
  "name": "@deskpro-apps/xero",
  "title": "Xero",
  "description": "View and manage accounting, invoicing, and more with Xero",
  "version": "1.0.0",
  "scope": "agent",
  "isSingleInstall": true,
  "hasDevMode": true,
  "repository": {
    "type": "github",
    "url": "https://github.com/DeskproApps/xero"
  },
  "targets": [
    {
      "target": "user_sidebar",
      "entrypoint": "#/"
    }
  ],
  "entityAssociations": {
    "linkedXeroContacts": {
      "entity": "person",
      "type": "external_id",
      "title": "Linked Xero Contacts"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client ID",
      "description": "Client ID can be obtained by following our setup guide",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "description": "Client Secret can be obtained by following our setup guide",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "global_access_token": {
      "title": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/admin/globalauth"
      },
      "isRequired": true,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://(.*).xero.com/.*",
        "methods": [
          "GET",
          "POST",
          "PUT",
          "DELETE",
          "PATCH"
        ],
        "timeout": 30
      }
    ]
  }
}